.container {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
}
.hd-bgc {
    width: 100%;
    height: 550rpx;
    background-color: #4d4e4f;
    margin-bottom: -300rpx;

}
.hd-bgc image{
    width: 200rpx;
    height: 120rpx;
    display:inline-block;
    text-align: center;
    position: absolute;
    left: 50%;
    top: 150rpx;
    /* top: 50%; */
    transform: translate(-50%, -50%);
}
.hdpic {
    margin: 0 20rpx;
    /* height: 560rpx; */
    background-color: #ffffff;
    border-radius: 20rpx;
}
.headerImg{
    width: 100%;
    height: 370rpx;
    border-top-right-radius: 20rpx;  
    border-top-left-radius: 20rpx;
}
.hdpic-title {
    display: flex;
    flex-direction: row;
}
.hdpic-title_Img {
    width: 200rpx;
    height: 200rpx;
    
    padding: 10rpx 30rpx 20rpx 10rpx;
}
.right-title {
    font-size: 32rpx;
    color: #000;
    padding-top: 15rpx;
}
.right-title1 {
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
}
.right-title1_pic {
    width: 40rpx;
    height: 40rpx;
    padding-left: 10rpx;
}
.right-title1_process {
    width:250rpx; 
    height: 15rpx; 
    background: #f27a57;
    margin-top: 15rpx;
    border-radius: 10rpx;
}
.right-title2 {
    color: #999999;
    font-size: 25rpx;
    padding-bottom: 20rpx;
}
.right-title3 {
    color: #a92112;
    font-size: 35rpx;
}

