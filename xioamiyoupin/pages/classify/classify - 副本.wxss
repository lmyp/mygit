.hd_img image {
    display: block;
    width: 100%;
    height: 220rpx;
}
.hd_name {
    text-align: center;
    font-size: 30rpx;
    margin-top: 40rpx;
    margin-bottom: 50rpx;
    color: #c4c4c4;
}
.classify-item{
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 20rpx 15rpx 0;
    font-size: 24rpx;
}
.classify-item image {
    width: 120rpx;
    height: 120rpx;
    padding: 30rpx;
    /* margin-bottom: 10rpx; */
}
.classifyList.item_name {
    font-size: 25rpx;
    color: #838383;
}