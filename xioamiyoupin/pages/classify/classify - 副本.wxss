page {
    height: 100%;
}
.content {
    display: flex;
    flex-direction: row;
    max-height: 100%;
     overflow: hidden;
}
.classifyList-name {
    font-size: 30rpx;
    
    padding: 20rpx;
    border-right: 1px solid #e5e5e5;
}
.classify-left {
    height: 100%; 
    width: 22%;
    box-sizing: border-box;
    overflow: hidden;
}
.classify-right {
    width: 72%;
    padding: 0 20rpx;
    height: 100%;
    overflow: hidden;
}
