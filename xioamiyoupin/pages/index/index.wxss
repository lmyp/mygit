/* 小米众筹 */
.bd-content {
    position: relative;
    /* font-size: 30rpx; */
    border-bottom: 3px solid #ccc;
    padding-bottom: 20rpx;
}
.bd-content_title {
    padding: 20rpx 30rpx 30rpx 30rpx;
    font-size: 30rpx;
}
.bd-content_more {
    position: absolute;
    right: 50rpx;
    top: 20rpx;
    font-size: 25rpx;
    color: #b6b6bb;
    height: 40rpx;
    line-height: 40rpx;
}
.bd-goods {
    margin: 0 20rpx;
    border-bottom: 1px solid #f68f0c;
}
.bd-goods image {
    width: 100%;
    height: 400rpx;
}
.bd-goods_title {
    font-size: 30rpx;
}
