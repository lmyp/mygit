    font-size: 25rpx;
}
.bd-goods_title2 {
    font-size: 25rpx;
}
.bd-goods_title3 {
    margin-bottom: 20rpx;
    font-size: 30rpx;
}
.bd-goods_title4 {
    color:#b60909;
}
.bd-goods_title5 {
    width: 30rpx;
    height: 30rpx;
    background-color: #b60909;
    color: #ffffff;
    margin-left: 10rpx;
}
.bd-goods_title6 {
    float: right;
    position: absolute;
    bottom: 40rpx;
    right: 20rpx;
    color:#b60909;
